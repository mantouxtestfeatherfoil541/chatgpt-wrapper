{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "ChatGPT Desktop",
  "version": "0.1.0",
  "identifier": "chatgpt-wrapper",
  "build": {
    "frontendDist": "../src"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [],
    "security": {
      "csp": null,
      "capabilities": [
        "default",
        "clipboard-capability",
        "network-allow-openai"
      ]
    },
    "trayIcon": null
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.png",
      "icons/icon-light-32x32.png",
      "icons/icon-light.png"
    ],
    "resources": [
      "icons/icon-light-32x32.png",
      "icons/32x32.png"
    ]
  }
}
